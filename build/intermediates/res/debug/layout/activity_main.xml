<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:omni="http://com.example.reshello/android"
    tools:ignore="all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:background="#ff0000"
	    android:id="@+id/layout" >
	    <Button android:id="@+id/nodata_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="15dp"
	        android:text="显示无数据"/>
	    <Button android:id="@+id/nonet_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="15dp"
	        android:text="显示无网络"/>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    omni:omni_loading="loading"
	    omni:omni_nodata="com.example.reshello.fragment.NodataFragment"
	    omni:omni_nonet="no_net"
	    android:background="#990099"
	    android:id="@+id/layout_center"
	    android:layout_margin="20dp">
	    <TextView android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="【这里是正文内容】【这里是正文内容】【这里是正文内容】【这里是正文内容】【这里是正文内容】【这里是正文内容】【这里是正文内容】"/>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:background="#ff0000"
	    android:orientation="horizontal">
	    <Button android:id="@+id/loading_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="15dp"
	        android:text="显示Loading"/>
	    <Button android:id="@+id/stop_layout"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="15dp"
	        android:text="关闭公共窗口"/>
	</LinearLayout>
</LinearLayout>
